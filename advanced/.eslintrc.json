{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "xo",
    "plugin:@stencil/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "new-cap": 0,
    "no-mixed-spaces-and-tabs": 0,
    "no-unused-expressions": 0,
    "react/jsx-no-bind": 0
  }
}
